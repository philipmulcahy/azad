{
    "manifest_version": 2,
    "name": "Amazon Order History Reporter",
    "permissions": [
        "https://smile.amazon.ca/",
        "https://www.amazon.ca/",
        "https://smile.amazon.com/",
        "https://www.amazon.com/",
        "https://smile.amazon.co.uk/",
        "https://www.amazon.co.uk/",
        "https://smile.amazon.de/",
        "https://www.amazon.de/",
        "https://www.amazon.es/",
        "https://www.amazon.fr/",
        "https://www.amazon.in/",
        "https://smile.amazon.it/",
        "https://www.amazon.it/",
        "https://www.amazon.com.au/"
    ],
    "background": {
        "scripts": [
            "background.bundle.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://smile.amazon.ca/*",
                "https://www.amazon.ca/*",
                "https://smile.amazon.com/*",
                "https://www.amazon.com/*",
                "https://smile.amazon.co.uk/*",
                "https://www.amazon.co.uk/*",
                "https://www.amazon.de/*",
                "https://www.amazon.es/*",
                "https://www.amazon.fr/*",
                "https://www.amazon.in/*",
                "https://smile.amazon.it/*",
                "https://www.amazon.it/*",
                "https://www.amazon.com.au/*"
            ],
            "css": ["jquery.dataTables.min.css"],
            "js": [
                "inject.bundle.js"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
